        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10,10,10,10" Background="#80505050">
          <TextBlock Margin="15,15,0,0">Trigger</TextBlock>
          <RadioButton Margin="15,15,0,0" IsChecked="true" Name="rbTriggerTypeEdge">Edge trigger</RadioButton>
